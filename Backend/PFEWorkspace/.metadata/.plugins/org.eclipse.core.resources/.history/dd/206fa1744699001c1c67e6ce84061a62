package com.altersis.demo;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

import com.altersis.demo.entity.Serveur;
import com.altersis.demo.entity.Status;
import com.altersis.demo.service.IServeurService;

@SpringBootApplication
public class DemoApplication implements CommandLineRunner{
	@Autowired
	IServeurService serveurService;
	public static void main(String[] args) {
		SpringApplication.run(DemoApplication.class, args);
		
		
	}

	@Override
	public void run(String... args) throws Exception {
		Serveur s1 = new Serveur(1L,"Apache","147.123.0.1","64GB","Web servers","",Status.Server_Down);
		Serveur s2 = new Serveur(2L,"WinSCP","148.123.0.1","64GB","FTP servers","",Status.Server_UP);
		serveurService.addServeur(s2);
		serveurService.addServeur(s1);
		
	}

}
